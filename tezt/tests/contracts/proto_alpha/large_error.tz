# This script always fails with a byte sequence full of zeros. If the
# parameter n is less than 2 then the length of the error message is 2
# bytes, otherwise it is 2^n bytes
parameter int;
storage unit;
code
  {
    CAR;
    PUSH bytes 0x00;
    SWAP;
    PUSH bool True;
    LOOP
      {
        SWAP;
        DUP; CONCAT;
        SWAP;
        PUSH int -1; ADD;
        DUP; GT
      };
    DROP;
    FAILWITH
  }
