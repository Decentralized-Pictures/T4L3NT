(executable
 (name error_doc)
 (libraries data-encoding
            tezos-shell
            tezos-client-alpha)
 (flags (:standard -open Tezos_base
                   -open Tezos_error_monad
                   -open Data_encoding
                   -open Tezos_client_alpha
                   -safe-string
                   -linkall)))

(rule
 (alias runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:tezos-tooling:lint.sh} %{deps})))
