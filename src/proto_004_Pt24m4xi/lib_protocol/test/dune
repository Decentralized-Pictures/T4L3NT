(executable
 (name main)
 (libraries tezos-base
            tezos-micheline
            tezos-protocol-environment
            alcotest-lwt
            tezos-004-Pt24m4xi-test-helpers
            tezos-stdlib-unix
            bip39
            tezos-protocol-004-Pt24m4xi-parameters)
 (flags (:standard -open Tezos_base__TzPervasives
                   -open Tezos_micheline
                   -open Tezos_protocol_004_Pt24m4xi
                   -open Tezos_004_Pt24m4xi_test_helpers
                   )))

(alias
 (name buildtest)
 (package tezos-protocol-004-Pt24m4xi-tests)
 (deps main.exe))

(rule
 (copy %{lib:tezos-protocol-004-Pt24m4xi-parameters:test-parameters.json}
       protocol_parameters.json))

; runs only the `Quick tests
(alias
 (name runtest_proto_004_Pt24m4xi)
 (package tezos-protocol-004-Pt24m4xi-tests)
 (action (run %{exe:main.exe} -v -q)))

; runs both `Quick and `Slow tests
(alias
 (name runtest_slow)
 (package tezos-protocol-004-Pt24m4xi-tests)
 (action (run %{exe:main.exe} -v)))

(alias
 (name runtest)
 (package tezos-protocol-004-Pt24m4xi-tests)
 (deps (alias runtest_proto_004_Pt24m4xi)))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:tezos-tooling:lint.sh} %{deps})))
