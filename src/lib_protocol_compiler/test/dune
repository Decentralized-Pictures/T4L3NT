(rule
  (alias runtest_rejections)
  (deps (package tezos-protocol-demo-noops))
  (action
    (run
       bash
         %{dep:rejections.sh}
         %{bin:tezos-protocol-compiler}
         %{lib:tezos-protocol-demo-noops:raw/TEZOS_PROTOCOL}
       )))

(rule
 (alias runtest_out_of_opam)
 (deps
   (alias runtest_rejections))
 (action (progn)))
