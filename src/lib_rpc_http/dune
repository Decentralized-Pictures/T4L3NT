(library
 (name tezos_rpc_http)
 (instrumentation (backend bisect_ppx))
 (public_name tezos-rpc-http)
 (modules RPC_client_errors media_type)
 (libraries tezos-base
            resto-cohttp)
 (flags (:standard -open Tezos_base__TzPervasives)))

