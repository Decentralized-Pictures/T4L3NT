bug-reports: "https://gitlab.com/tezos/tezos/issues"
dev-repo: "git+https://gitlab.com/tezos/tezos.git"
license: "MIT"
depends: [
  "dune" { >= "2.0" }
  "tezos-base"
  "tezos-storage"
  "tezos-stdlib-unix"
  "tezos-protocol-environment"
  "tezos-protocol-updater"
  "tezos-shell"
  "tezos-shell-context"
