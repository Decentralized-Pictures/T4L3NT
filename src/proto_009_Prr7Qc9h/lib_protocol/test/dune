(executable
 (name main)
 (libraries tezos-base
            tezos-micheline
            tezos-protocol-environment
            alcotest-lwt
            tezos-009-Prr7Qc9h-test-helpers
            tezos-stdlib-unix
            tezos-client-base
            tezos-protocol-009-Prr7Qc9h-parameters
            tezos-test-services)
 (flags (:standard -open Tezos_base__TzPervasives
                   -open Tezos_micheline
                   -open Tezos_client_009_Prr7Qc9h
                   -open Tezos_protocol_009_Prr7Qc9h
                   -open Tezos_protocol_environment_009_Prr7Qc9h
                   -open Tezos_009_Prr7Qc9h_test_helpers
                   -open Tezos_test_services)))

(rule
 (alias buildtest)
 (package tezos-protocol-009-Prr7Qc9h-tests)
 (deps main.exe)
 (action (progn)))

(rule
 (copy %{lib:tezos-protocol-009-Prr7Qc9h-parameters:test-parameters.json}
       protocol_parameters.json))

; runs only the `Quick tests
(rule
 (alias runtest_proto_009_Prr7Qc9h)
 (deps contracts/big_interpreter_stack.tz)
 (package tezos-protocol-009-Prr7Qc9h-tests)
 (action (run %{exe:main.exe} -v -q)))

; runs both `Quick and `Slow tests
(rule
 (alias runtest_slow)
 (deps contracts/big_interpreter_stack.tz)
 (package tezos-protocol-009-Prr7Qc9h-tests)
 (action (run %{exe:main.exe} -v)))

(rule
 (alias runtest)
 (package tezos-protocol-009-Prr7Qc9h-tests)
 (deps (alias runtest_proto_009_Prr7Qc9h))
 (action (progn)))

(rule
 (alias runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:tezos-tooling:lint.sh} %{deps})))
