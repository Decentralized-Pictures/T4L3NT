(library
 (name tezos_client_commands)
 (public_name tezos-client-commands)
 (libraries tezos-base
            tezos-client-base
            tezos-clic.unix
            tezos-rpc
            tezos-p2p
            tezos-shell-services
            tezos-stdlib-unix
            tezos-signer-backends
