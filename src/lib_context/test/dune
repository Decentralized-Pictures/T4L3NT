(executables
 (names test)
 (libraries tezos-base
            tezos-base.unix
            tezos-context
            tezos-stdlib-unix
            alcotest-lwt
            vector)
 (flags (:standard -open Tezos_base__TzPervasives
                   -open Tezos_context
                   -open Tezos_stdlib_unix)))

(rule
 (alias buildtest)
 (deps test.exe)
 (action (progn)))

(rule
 (alias runtest)
 (package tezos-context)
 (action (chdir %{workspace_root} (run %{exe:test.exe}))))
