(executable
 (name bip39_tests)
 (modules bip39_tests)
 (libraries tezos-client-base alcotest)
 (flags (:standard -open Tezos_client_base)))

(rule
 (alias    runtest)
 (package tezos-client-base)
 (deps    (:exe bip39_tests.exe))
 (action  (run %{exe})))

(executable
