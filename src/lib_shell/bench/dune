(executables
 (names bench_simple bench_tool)
 (libraries tezos-base
            tezos-shell
            tezos-004-Pt24m4xi-test-helpers)
 (flags (:standard -open Tezos_base__TzPervasives
                   -open Tezos_shell
                   -open Tezos_protocol_004_Pt24m4xi
                   -open Tezos_protocol_004_Pt24m4xi_parameters
                   -open Tezos_004_Pt24m4xi_test_helpers)))

(alias
 (name buildtest)
 (deps bench_tool.exe bench_simple.exe))

(alias
 (name runbench_004_Pt24m4xi_simple)
 (deps bench_simple.exe)
 (action (chdir %{workspace_root} (run %{exe:bench_simple.exe}))))

(alias
 (name runbench_004_Pt24m4xi)
 (deps bench_tool.exe)
 (action (chdir %{workspace_root} (run %{exe:bench_tool.exe}))))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:tezos-tooling:lint.sh} %{deps})))
