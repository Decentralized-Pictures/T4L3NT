(executables
 (names test
        test_locator
        test_synchronisation_heuristic_fuzzy)
 (libraries tezos-base
            tezos-storage
            tezos-shell-context
            tezos-p2p
            tezos-p2p-services
            tezos-protocol-updater
            tezos-shell
            tezos-shell-services
            tezos-embedded-protocol-demo-noops
            tezos-stdlib-unix
            tezos-validation
            tezos-test-services
            alcotest-lwt
            crowbar)
 (flags (:standard -open Tezos_base__TzPervasives
                   -open Tezos_storage
                   -open Tezos_shell_context
                   -open Tezos_protocol_updater
                   -open Tezos_p2p
                   -open Tezos_p2p_services
                   -open Tezos_test_services
                   -open Tezos_shell
                   -open Tezos_shell_services
                   -open Tezos_stdlib_unix
                   -open Tezos_validation)))


(rule
 (alias buildtest)
 (deps test.exe
       test_locator.exe
       test_synchronisation_heuristic_fuzzy.exe)
 (action (progn)))

(rule
 (alias runtest_shell)
 (action (run %{exe:test.exe})))

(rule
 (alias runtest_locator)
 (action (run %{exe:test_locator.exe} --no-bench)))

(rule
 (alias runtest_synchronisation)
 (action (run %{exe:test_synchronisation_heuristic_fuzzy.exe})))

(rule
 (alias runbench_locator)
 (action (run %{exe:test_locator.exe})))

(rule
 (alias runtest)
 (package tezos-shell)
 (deps (alias runtest_shell)
       (alias runtest_locator)
       (alias runtest_synchronisation))
 (action (progn)))

(rule
 (alias runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:tezos-tooling:lint.sh} %{deps})))
