(executables
 (names test_mockup_args test_fuzzing_mockup_args test_persistence)
 (libraries tezos_mockup tezos_mockup_registration tezos-test-services crowbar alcotest
   alcotest-lwt)
 (flags
  (:standard -open Tezos_base__TzPervasives)))

(rule
 (alias runtest_mockup_args)
 (action
  (run %{exe:test_mockup_args.exe})))

(rule
 (alias runtest_fuzzing_mockup_args)
 (action
  (run %{exe:test_fuzzing_mockup_args.exe})))

(rule
 (alias runtest_persistence)
 (action
  (run %{exe:test_persistence.exe})))

(rule
 (alias runtest)
 (package tezos-mockup)
 (deps
  (alias runtest_mockup_args)
  (alias runtest_fuzzing_mockup_args)
  (alias runtest_persistence))
 (action (progn)))
