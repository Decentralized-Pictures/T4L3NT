(library
 (name tezos_crypto)
 (public_name tezos-crypto)
 (flags (:standard -safe-string
                   -open Tezos_stdlib
                   -open Tezos_data_encoding
                   -open Tezos_error_monad
                   -open Tezos_rpc
                   ))
 (libraries tezos-stdlib
            tezos-data-encoding
            tezos-error-monad
            tezos-rpc
            lwt
            blake2
            hacl
            secp256k1
            uecc
            zarith))

(alias
 (name runtest_lint)
 (deps (glob_files *.ml{,i}))
 (action (run %{lib:tezos-tooling:lint.sh} %{deps})))
